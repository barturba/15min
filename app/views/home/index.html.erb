<div class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
    <h1 class="text-2xl font-semibold text-gray-900 mb-8 text-center">Work Timer</h1>

    <div class="space-y-6">
      <!-- Work Start Section -->
      <div class="space-y-3">
        <label class="block text-sm font-medium text-gray-700">Work Start</label>

        <!-- Time Selection Dropdown -->
        <select id="workStartSelect" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white">
          <option value="15">15 minutes ago</option>
          <option value="30">30 minutes ago</option>
          <option value="60">1 hour ago</option>
          <option value="120">2 hours ago</option>
        </select>

        <!-- Work Start Time Display -->
        <div class="relative">
          <input
            type="text"
            id="workStartTime"
            readonly
            class="w-full px-4 py-3 bg-gray-100 border border-gray-200 rounded-lg text-gray-800 font-mono text-center cursor-pointer hover:bg-gray-200 transition-colors"
            onclick="copyToClipboard(this.value)"
          >
          <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Work End Section -->
      <div class="space-y-3">
        <label class="block text-sm font-medium text-gray-700">Work End</label>

        <!-- Work End Time Display -->
        <div class="relative">
          <input
            type="text"
            id="workEndTime"
            readonly
            class="w-full px-4 py-3 bg-blue-50 border border-blue-200 rounded-lg text-blue-800 font-mono text-center cursor-pointer hover:bg-blue-100 transition-colors"
            onclick="copyToClipboard(this.value)"
          >
          <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
            <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Status Message -->
      <div id="statusMessage" class="text-center text-sm text-gray-500 opacity-0 transition-opacity duration-300">
        Copied to clipboard!
      </div>
    </div>
  </div>
</div>
